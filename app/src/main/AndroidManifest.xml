<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.touhidapps.androidwidget">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ButtonActivity" />
        <activity android:name=".ToastActivity" />
        <activity android:name=".CheckBoxAndRadioActivity" />
        <activity android:name=".AlertDialogActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".TextViewEditTextActivity" />
        <activity android:name=".RatingBarActivity" />
        <activity android:name=".DateTimePickerActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".ListViewActivity"></activity>
    </application>

</manifest>